import { useState } from "react";
import "./index.css";

export default function App() {
  const [role, setRole] = useState(null);
  const [darkMode, setDarkMode] = useState(false);

  return (
    <div className={`app ${darkMode ? "dark" : "light"}`}>
      {/* tlaÄÃ­tko na pÅ™epÃ­nÃ¡nÃ­ vzhledu */}
      <div className="theme-toggle">
        <button onClick={() => setDarkMode(!darkMode)}>
          {darkMode ? "â˜€ï¸ SvÄ›tlÃ½" : "ğŸŒ™ TmavÃ½"}
        </button>
      </div>

      {!role ? (
        <div className="menu">
          <h1>Vyberte si roli:</h1>
          <button onClick={() => setRole("driver")}>Å˜idiÄ</button>
          <button onClick={() => setRole("passenger")}>PasaÅ¾Ã©r</button>
        </div>
      ) : (
        <div className="content">
          {role === "driver" ? <h2>Jsem Å™idiÄ ğŸš—</h2> : <h2>Jsem pasaÅ¾Ã©r ğŸ§³</h2>}
          <button onClick={() => setRole(null)}>ZpÄ›t</button>
        </div>
      )}
    </div>
  );
}
